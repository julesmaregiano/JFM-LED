<div class="dashboard-wrap">
  <%= render "/shared/sidebar"%>

  <div class="dashboard-content">

    <div class="padding-box">
      <div class="col-xs-12 col-md-6">
        <%= render "shared/booking_calendar", availabilities: @availabilities, user: @user, tech: User.where(role: "technician").first %>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="card-container">
          <%=  %>
          <%= simple_form_for [@user.role, @booking] do |f| %>

            <div class="availabilities-fields"> <%# div pour injecter les avaialbilities via le JS %></div>
            <%= f.input :address %>
            <%= f.hidden_field :product_id, value: @product.id %>

            <div class="options-fields"></div>
            <div class="form-group">
              <label for="">Réseaux à détecter</label>
              <% @product.options.each do |option| %>
                <% option.option_values.each do |option_value| %>
                  <div class="option_values-tobook" data-option-value-id="<%= option_value.id %>"><%= option_value.label %></div>
                <% end %>
              <% end %>
            </div>

            <%= f.hidden_field :address1 %>
            <%= f.hidden_field :city %>
            <%= f.hidden_field :zipcode %>
            <%= f.hidden_field :country %>
            <%= f.input :surface %>
            <%= f.input :foreman_id, label: "Chef de chantier", collection: Foreman.where(branch_id: @user.branch_id).to_a, label_method: lambda { |foreman| "#{foreman.first_name} #{foreman.last_name}" } %>
            <%= f.input :comment %>
            <%= f.input :pdf, label: "Bon de commande", as: :attachinary %>
            <%= f.button :submit %>
          <% end %>
        </div>
      </div>

  </div>
    </div>
</div>
